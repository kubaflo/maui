<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32483"
             Title="Issue 32483 - Entry CursorPosition">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Type digits to test CursorPosition during masking" 
               FontAttributes="Bold"/>
        
        <Label Text="The Entry will apply a CPF mask (XXX.XXX.XXX-XX)" 
               FontSize="12"/>
        
        <Entry x:Name="TestEntry"
               Placeholder="Type digits..."
               Keyboard="Numeric"
               MaxLength="14"
               AutomationId="TestEntry"
               TextColor="Black"/>
        
        <Label x:Name="CursorLabel"
               AutomationId="CursorLabel"
               Text="Cursor Position: N/A"
               FontSize="12"
               TextColor="Blue"/>
        
        <Label x:Name="StatusLabel"
               AutomationId="StatusLabel"
               Text="Status: Ready"
               FontSize="12"
               TextColor="Green"/>
    </VerticalStackLayout>
</ContentPage>
