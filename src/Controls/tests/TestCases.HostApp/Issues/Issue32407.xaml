<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32407"
             Title="Issue 32407 - BoxView Separator in CollectionView2">

    <Grid>
        <CollectionView x:Name="TestCollection"
                        AutomationId="TestCollection"
                        ItemsSource="{Binding Items}"
                        ItemSizingStrategy="MeasureAllItems">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- Blue separator BoxView that should always be visible -->
                        <BoxView Grid.Row="0"
                                 BackgroundColor="Blue"
                                 HeightRequest="2"
                                 HorizontalOptions="FillAndExpand"
                                 AutomationId="Separator" />
                        
                        <!-- Content -->
                        <Grid Grid.Row="1" Padding="16" BackgroundColor="White">
                            <Label Text="{Binding .}" 
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   AutomationId="ItemLabel"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
