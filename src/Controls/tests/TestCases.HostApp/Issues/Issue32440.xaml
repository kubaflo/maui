<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32440"
             Title="Issue 32440 - CheckBox Alignment">
    
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="CheckBox should be centered in Grid" 
               FontSize="16" 
               HorizontalOptions="Center"/>
        
        <!-- Grid with CheckBox centered - this is the reported issue -->
        <Grid x:Name="TestGrid" 
              BackgroundColor="LightBlue"
              HeightRequest="100"
              WidthRequest="300"
              AutomationId="TestGrid">
            <CheckBox x:Name="CenteredCheckBox"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Color="Red"
                      AutomationId="CenteredCheckBox"/>
        </Grid>
        
        <!-- Reference: Grid with dot (Label) centered for comparison -->
        <Grid BackgroundColor="LightGreen"
              HeightRequest="100"
              WidthRequest="300"
              AutomationId="ReferenceGrid">
            <Label Text="â—" 
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Red"
                   AutomationId="ReferenceDot"/>
        </Grid>
        
        <Label Text="Both items should be vertically centered in their grids"
               FontSize="12"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
