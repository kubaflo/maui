<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue33530"
             BackgroundColor="Transparent">
    <Grid>
        <!-- Test Border with Rotation + HorizontalOptions.Start -->
        <Border x:Name="RotatedBorder"
                BackgroundColor="White"
                StrokeThickness="1"
                Stroke="Gray"
                Padding="10"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Rotation="-90"
                AutomationId="RotatedBorder">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.4" Radius="16" Offset="0,8"/>
            </Border.Shadow>
            <VerticalStackLayout Spacing="8">
                <BoxView Color="Black"
                         HeightRequest="90"
                         WidthRequest="240"
                         AutomationId="BoxView"/>
                <Label Text="Rotated Border"
                       FontSize="12"
                       HorizontalTextAlignment="Center"
                       AutomationId="Label"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
