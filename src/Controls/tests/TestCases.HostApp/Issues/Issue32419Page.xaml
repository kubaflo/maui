<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32419Page"
             Title="RTL Test Page">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            x:Name="ContentStack"
            AutomationId="ContentStack">
            
            <Label
                Text="Welcome to .NET MAUI RTL!"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                AutomationId="TitleLabel" />
            
            <Label
                Text="This content should align to the RIGHT in RTL mode"
                HorizontalOptions="Start"
                AutomationId="DescriptionLabel" />
            
            <Button 
                Text="Button 1" 
                WidthRequest="150"
                HorizontalOptions="Start"
                AutomationId="Button1" />
            
            <Button 
                Text="Button 2" 
                WidthRequest="150"
                HorizontalOptions="Start"
                AutomationId="Button2" />
            
            <Button 
                Text="Button 3" 
                WidthRequest="150"
                HorizontalOptions="Start"
                AutomationId="Button3" />
            
            <Label 
                Text="In RTL mode, these buttons should appear on the RIGHT side"
                TextColor="Red"
                FontAttributes="Italic"
                AutomationId="InstructionLabel" />
                
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
