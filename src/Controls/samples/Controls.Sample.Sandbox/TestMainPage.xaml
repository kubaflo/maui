<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.TestMainPage"
             Shell.NavBarIsVisible="False">
    
    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        BackgroundColor="LightBlue">
        
        <Label
            Text="Main Page - NavBar Hidden"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            x:Name="MainPageLabel"/>
        
        <Label
            Text="This page has Shell.NavBarIsVisible=&#34;False&#34;"
            FontSize="16"
            HorizontalOptions="Center"
            TextColor="DarkBlue"/>
        
        <BoxView
            x:Name="ContentBox"
            HeightRequest="200"
            Color="DarkBlue"/>
        
        <Button 
            Text="Navigate to SubPage"
            Clicked="OnNavigateToSubPage"
            BackgroundColor="DarkBlue"
            TextColor="White"/>
            
        <Label
            x:Name="StatusLabel"
            Text="Test status will appear here"
            FontSize="14"
            TextColor="Black"
            HorizontalOptions="Center"
            VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>
