<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.MainPage"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             Title="RTL Test Page">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            x:Name="ContentStack">
            
            <Label
                Text="Welcome to .NET MAUI!"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Start" />
            
            <Label
                Text="This content should align to the RIGHT in RTL mode"
                HorizontalOptions="Start" />
            
            <Button 
                Text="Button 1" 
                WidthRequest="150"
                HorizontalOptions="Start" />
            
            <Button 
                Text="Button 2" 
                WidthRequest="150"
                HorizontalOptions="Start" />
            
            <Button 
                Text="Button 3" 
                WidthRequest="150"
                HorizontalOptions="Start" />
            
            <Label 
                Text="In RTL mode, these buttons should appear on the RIGHT side"
                TextColor="Red"
                FontAttributes="Italic" />
            
            <Label
                x:Name="DebugLabel"
                Text="Debug info will appear here"
                FontSize="12"
                TextColor="Gray" />
                
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>